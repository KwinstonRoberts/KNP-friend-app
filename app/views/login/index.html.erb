

<div class="wrapper">
  <div class="loginForm">
    <h2>Login</h2>

    <%= form_for :login, url: login_index_path do |f| %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, "Password" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      </div>


      <%= f.submit "Login", method: :post %>


    <% end %>
    </div>
</div>

